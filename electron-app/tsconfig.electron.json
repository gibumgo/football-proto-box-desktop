{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "dist-electron",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "src/main/**/*",
        "src/preload/**/*"
    ]
}